<Page
    x:Class="MovieExplorer.SecondPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:MovieExplorer.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:MovieExplorer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    DataContext="{Binding SecondViewModel, Source={StaticResource vmLocator}}"
    RequestedTheme="Dark"
    mc:Ignorable="d">


    <Grid Background="Black">
        <Hub Header="{Binding Film.Title, Mode=TwoWay}">
            <Hub.Background>
                <ImageBrush
                    ImageSource="{Binding Film.Background, Mode=TwoWay}"
                    Opacity="0.25"
                    Stretch="UniformToFill" />
            </Hub.Background>

            <HubSection
                x:Name="Description"
                Width="400"
                HorizontalAlignment="Stretch">
                <HubSection.HeaderTemplate>
                    <DataTemplate>
                        <TextBlock FontSize="40" Text="Description" />
                    </DataTemplate>
                </HubSection.HeaderTemplate>
                <DataTemplate>
                    <ScrollViewer>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="20" />
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Row="0" Grid.Column="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Image
                                    Grid.Column="0"
                                    Source="{Binding Film.Poster, Mode=TwoWay}"
                                    Stretch="Uniform" />

                                <Grid Grid.Column="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <controls:StarRarting
                                        x:Name="RatingControl"
                                        Grid.Row="1"
                                        Width="100"
                                        Height="32"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Rate="{Binding Film.Rate, Mode=TwoWay}" />
                                    <TextBlock
                                        Grid.Row="0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="42.667"
                                        Foreground="#FFFFBB06"
                                        Text="{Binding Film.Year, Mode=TwoWay}" />
                                    <TextBlock
                                        Grid.Row="2"
                                        Margin="10,20,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        FontSize="20"
                                        Text="Directed By" />
                                    <TextBlock
                                        Grid.Row="3"
                                        Margin="10,0,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        FontSize="18.667"
                                        Foreground="#FFD8D4D4"
                                        Text="{Binding Film.Director, Mode=TwoWay}" />
                                    <TextBlock
                                        Grid.Row="4"
                                        Margin="10,20,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        FontSize="20"
                                        Text="Description" />
                                    <TextBlock
                                        Grid.Row="5"
                                        Width="170"
                                        Margin="10,0,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        FontSize="18.667"
                                        Foreground="#FFD8D4D4"
                                        Text="{Binding Film.Description, Mode=TwoWay}"
                                        TextWrapping="Wrap" />
                                </Grid>
                            </Grid>

                            <TextBlock
                                Grid.Row="2"
                                Margin="0,20,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontSize="20"
                                Text="Synopsis" />
                            <TextBlock
                                Name="Description"
                                Grid.Row="3"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontSize="18.667"
                                Foreground="#FFD8D4D4"
                                Text="{Binding Film.Summary, Mode=TwoWay}"
                                TextWrapping="Wrap" />
                        </Grid>
                    </ScrollViewer>
                </DataTemplate>
            </HubSection>

            <HubSection x:Name="Cast" Header="Cast">
                <HubSection.HeaderTemplate>
                    <DataTemplate>
                        <TextBlock FontSize="40" Text="Cast" />
                    </DataTemplate>
                </HubSection.HeaderTemplate>
                <DataTemplate>
                    <Grid>
                        <ListView x:Name="LLSActors" ItemsSource="{Binding Film.Cast, Mode=TwoWay}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Style="{StaticResource lviMainGrid}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <Image
                                            Grid.Column="0"
                                            Source="{Binding Picture, Mode=TwoWay}"
                                            Style="{StaticResource lviImage}" />

                                        <Grid Grid.Column="1">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>
                                            <Viewbox
                                                Grid.Row="0"
                                                HorizontalAlignment="Left"
                                                Style="{StaticResource lviTitleVB}">
                                                <TextBlock
                                                    FontWeight="Bold"
                                                    Foreground="#FFF6F6F5"
                                                    Text="{Binding Name, Mode=TwoWay}"
                                                    TextWrapping="NoWrap" />
                                            </Viewbox>
                                            <TextBlock
                                                Grid.Row="1"
                                                Foreground="#FFDFDDDD"
                                                Text="{Binding Character, Mode=TwoWay}"
                                                TextWrapping="Wrap" />
                                        </Grid>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </DataTemplate>
            </HubSection>
            <HubSection x:Name="Crew" Header="Crew">
                <HubSection.HeaderTemplate>
                    <DataTemplate>
                        <TextBlock FontSize="40" Text="Crew" />
                    </DataTemplate>
                </HubSection.HeaderTemplate>
                <DataTemplate>
                    <Grid>
                        <ListView
                            x:Name="LLSCrew"
                            Margin="5"
                            ItemsSource="{Binding Film.Crew, Mode=TwoWay}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Style="{StaticResource lviMainGrid}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <Image
                                            Grid.Column="0"
                                            Source="{Binding Picture, Mode=TwoWay}"
                                            Style="{StaticResource lviImage}" />

                                        <Grid Grid.Column="1">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>
                                            <Viewbox
                                                Grid.Row="0"
                                                HorizontalAlignment="Left"
                                                Style="{StaticResource lviTitleVB}">
                                                <TextBlock
                                                    FontWeight="Bold"
                                                    Foreground="#FFF6F6F5"
                                                    Text="{Binding Name, Mode=TwoWay}"
                                                    TextWrapping="NoWrap" />
                                            </Viewbox>
                                            <TextBlock
                                                Grid.Row="1"
                                                Foreground="#FFFCFFAF"
                                                Text="{Binding Department, Mode=TwoWay}"
                                                TextWrapping="Wrap" />
                                            <TextBlock
                                                Grid.Row="2"
                                                Foreground="#FFDFDDDD"
                                                Text="{Binding Job, Mode=TwoWay}"
                                                TextWrapping="Wrap" />
                                        </Grid>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </DataTemplate>
            </HubSection>
        </Hub>
    </Grid>
</Page>
